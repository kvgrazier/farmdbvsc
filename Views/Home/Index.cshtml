
@using (Html.BeginForm("TransactionList", "Home", FormMethod.Post, new { @id = "TransactionList" }))
{
	<div class="container-fluid">
		<h4>View Transaction Listing</h4>
		<div class="row">
			<div class="col-sm-2">
				<label class="control-label">Select Person:</label>
				@Html.DropDownList("PersonID", (IEnumerable<SelectListItem>)ViewBag.accountpersons, new { @class = "form-control", @style = "width: 90px; height: 30px;" })
			</div>
			<div class="col-sm-2">
				<label class="control-label">Begin Date:</label>
				<input type="text" class="form-control dateFormat" name="firstDay" style="width: 110px;" value="@((string)ViewBag.firstDay)" />
			</div>
			<div class="col-sm-2">
				<label class="control-label">End Date:</label>
				<input type="text" class="form-control" name="lastDay" style="width: 110px;" value="@((string)ViewBag.lastDay)" />
			</div>
			<div class="col-sm-2">
				<label for="Category"></label>
				<input type="submit" value="View Transaction Listing" class="btn btn-default btn-md" style="background-color: #EEEEEE;" />
			</div>
		</div>
	</div>
}

@using (Html.BeginForm("ProfitAndLoss", "Home", FormMethod.Post, new { @id = "ProfitAndLoss" }))
{
	<div class="container-fluid">
		<h4>Profit And Loss Report</h4>
		<div class="row">
            <div class="col-sm-2">
                <label for="Category">Select Person:</label>
                @Html.DropDownList("PersonID", (IEnumerable<SelectListItem>)ViewBag.accountpersons, new { @class = "form-control", @style = "width: 90px; height: 30px;" })
            </div>
			<div class="col-sm-2">
				<label class="control-label">Begin Date:</label>
				<input type="text" class="form-control dateFormat" name="firstDay" style="width: 110px;" value="@((string)ViewBag.firstDay)" />
			</div>
			<div class="col-sm-2">
				<label class="control-label">End Date:</label>
				<input type="text" class="form-control" name="lastDay" style="width: 110px;" value="@((string)ViewBag.lastDay)" />
			</div>
			<div class="col-sm-2">
				<label for="Category"></label>
				<input type="submit" value="Profit and Loss Report" class="btn btn-default btn-md" style="background-color: #EEEEEE;" />
			</div>
		</div>
	</div>
}
<script type="text/javascript">
	$.validator.addMethod("dateFormat",
		function (value, element) {
			return value.match(/^(?:(0[1-9]|1[012])[\/.](0[1-9]|[12][0-9]|3[01])[\/.](19|20)[0-9]{2})$/);
		}, "Please enter a date in the format mm/dd/yyyy.");

	$('#TransactionList').validate({
		rules: {
			firstDay: {
				required: true,
				dateFormat: true,
			},
			lastDay: {
				required: true,
				dateFormat: true,
			},
		},
		messages: {
			firstDay: {
				required: "Date Required!!",
				dateFormat: "Date should in the format mm/dd/yyyy.",
			},
			lastDay: {
				required: "Date Required!!",
				dateFormat: "Date should in the format mm/dd/yyyy.",
			},
		},
		errorPlacement: function (error, element) {
			error.insertAfter(element);
			error.css('color', '#ff0000');
		},
		submitHandler: function (form) {
			form.submit();
		}
	});

	$('#ProfitAndLoss').validate({
		rules: {
			firstDay: {
				required: true,
				dateFormat: true,
			},
			lastDay: {
				required: true,
				dateFormat: true,
			},
		},
		messages: {
			firstDay: {
				required: "Date Required!!",
				dateFormat: "Date should in the format mm/dd/yyyy.",
			},
			lastDay: {
				required: "Date Required!!",
				dateFormat: "Date should in the format mm/dd/yyyy.",
			},
		},
		errorPlacement: function (error, element) {
			error.insertAfter(element);
			error.css('color', '#ff0000');
		},
		submitHandler: function (form) {
			form.submit();
		}
	});
</script>






